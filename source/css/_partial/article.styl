.article
    margin-bottom: 28px
    font-weight: 300

    .article-time
        font-size: 14px
        color: rgba(0, 0, 0, 0.54)
        margin-bottom: 40px
        
    .article-header,
    .article-detail-header
        color: rgba(0, 0, 0, 0.87)
        font-size: 30px
        font-weight: 400
        line-height: 1.33
        margin: 0 0 12px

        .article-header-link
            -webkit-transition: color .3s
            transition: color .3s

            &:hover
                color: #00a2ff

    .article-type
        color: rgba(0,0,0,.54)
        font-size: .875rem
        line-height: 24px
        margin: 0 0 15px
        font-weight: 300

        .article-tag-list
            display: inline-block

            .article-tag-list-item
                padding: 0px 5px
                display: inline-block


    .article-entry
        & > p
            color: #333
            line-height: 24px
            margin: 10px 0 10px
            font-weight: 300

    .article-more-link
        margin-top: 5px

    .article-detail-header
        text-align: center