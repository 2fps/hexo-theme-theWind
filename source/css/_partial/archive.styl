
.archive-year-wrap
    font-size: 24px
    margin-bottom: 20px

.page-nav
    margin: 10px 0
    text-align: center
    font-weight: 300

    .page-number
        display: inline-block
        border: 1px solid #e0e0e0
        padding: 5px 12px
        margin: 0 5px
        cursor pointer
        -webkit-transition: all .3s
        transition: all .3s

        &:hover
            background-color: #00a2ff
            color: #fff
        
    .current
        background-color: #00a2ff
        color: #fff