
.archive-year-wrap
    font-size: 24px
    margin-bottom: 20px

.page-nav
    margin: 50px 0 30px
    text-align: center
    font-weight: 300

    .page-number
        display: inline-block
        border: 1px solid #e0e0e0
        padding: 5px 12px
        margin: 0 5px
        cursor pointer
        -webkit-transition: all .3s
        transition: all .3s

        &:hover
            border: 1px solid #00a2ff
            background-color: #00a2ff
            color: #fff
        
    .current
        background-color: #00a2ff
        border: 1px solid #00a2ff
        color: #fff

.archive-list-count,
.tag-list-count,
.category-list-count
    &:before
        content: ' ('

    &:after
        content: ')'

.article-more-link
    text-align: center;

.article-more-a
    &:before
        content: '---'
    &:after
        content: '---'