<div class="header navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="<%- url_for() %>" id="logo" class="navbar-brand"><%= config.title %></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height: 1px;">
            <ul class="nav navbar-nav navbar-right">
                <% for (var name in theme.menu){ %>
                    <% if (theme.hasOwnProperty( name )) { %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= name %><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <% for (var sub in theme[ name ]) { %>
                                    <li>
                                        <a href="<%- url_for(theme[ name ][ sub ]) %>"><%= sub %></a>
                                    </li>
                                <% } %>
                            </ul>
                        </li>
                    <% } else { %>
                        <li>
                            <a class="main-nav-link" href="<%- url_for(theme.menu[ name ]) %>"><%= name %></a>
                        </li>
                    <% } %>
                <% } %>
            </ul>
        </div>
    </div>
</div>